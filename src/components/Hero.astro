---
import heroImage from '../assets/hero_pict.jpg';
---
<div class="h-screen flex justify-center items-center flex-col">
  <div class="">
    <div class="my-5 text-center">
      <h1 class="text-2xl">Clément <span class="font-bold uppercase text-blue-500">Guillemot</span></h1>
      <p class="italic">Développeur Web</p>
    </div>

    <div class="flex gap-x-10">
      <a class="btn btn-primary">Télécharger mon CV</a>
      <a class="btn btn-neutral">Contactez-moi</a>
    </div>
  </div>
  <div class="my-5">
    <img src={heroImage.src} alt="hero" width={heroImage.width} height={heroImage.height} class="rounded-md">
  </div>
</div>